<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Login - FAD</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f7f9;
      margin: 0;
      padding: 0;
    }

    .cadastro-topo {
      position: absolute;
      top: 15px;
      right: 25px;
      font-size: 14px;
      color: #333;
    }

    .cadastro-topo a {
      text-decoration: none;
      color: #007bff;
    }

    .cadastro-topo a:hover {
      text-decoration: underline;
    }

    .login-container {
      max-width: 400px;
      margin: 80px auto;
      background: #fff;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      text-align: center;
      position: relative;
    }

    .login-container input,
    .login-container select,
    .login-container button {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      margin-bottom: 1rem;
    }

    .login-container button {
      background-color: #006699;
      color: white;
      font-size: 1rem;
      cursor: pointer;
      border: none;
    }

    .login-container button:hover {
      background-color: #005080;
    }

    .login-container .link-extra {
      margin-top: 0.5rem;
      font-size: 14px;
    }

    .login-container .link-extra a {
      color: #007bff;
      text-decoration: none;
    }

    .login-container .link-extra a:hover {
      text-decoration: underline;
    }

    .dialog {
    position: fixed; /* <== ALTERADO para fixar no centro da tela */
    top: 50%;         /* <== Centraliza verticalmente */
    left: 50%;        /* <== Centraliza horizontalmente */
    transform: translate(-50%, -50%);  /* <== Ajusta para centraliza√ß√£o absoluta */
    width: 300px;
    background: white;
    border: 1px solid #ccc;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    }
    
    .dialog-header {
      padding: 10px;
      background: #f1f1f1;
      border-bottom: 1px solid #ccc;
      border-radius: 8px 8px 0 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: move;
    }

    .dialog-body {
      padding: 15px;
      text-align: center;
    }

    .dialog-body p {
      margin: 0;
      padding: 5px 0;
    }

    .close-button {
      background: #ff0000;
      color: white;
      border: none;
      border-radius: 4px;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      font-size: 18px;
    }

    .ok-button {
      margin-top: 10px;
      padding: 6px 16px;
      background: #004080;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .hidden {
      display: none;
    }
  </style>
</head>
<body>

  <!-- Link de cadastro no topo -->
  <div class="cadastro-topo">
    N√£o tem acesso? <a href="/cadastro">Cadastre-se aqui</a>
  </div>

  <!-- Formul√°rio de login -->
  <div class="login-container">
    <h2>Acesso √† FAD</h2>
    <form id="loginForm">
      <input type="email" name="email" placeholder="E-mail institucional" required>
      <div style="position: relative;"><input type="password" name="senha" id="senhaInput" placeholder="Senha" required><span onclick="toggleSenha()" style="position: absolute; right: 10px; top: 10px; cursor: pointer;" title="Mostrar/ocultar senha">üëÅÔ∏è</span></div>

      <label for="tipo">Tipo de Acesso:</label>
      <select id="tipo" name="tipo" required>
        <option value="comum">Comum</option>
        <option value="administrador">Administrador</option>
        <option value="master">Master</option>
      </select>

    <button type="submit">Entrar</button>
    </form>

    <div class="link-extra">
      <a href="/recuperar-senha">Esqueci minha senha</a>
    </div>
  </div>

  <!-- Caixa de erro visual -->
  <div id="erroLogin" class="dialog hidden">
    <div class="dialog-header">
      <span id="erroLoginTexto">Erro</span>
      <button class="close-button" onclick="document.getElementById('erroLogin').style.display='none'; location.reload();">&times;</button>
    </div>
    <div class="dialog-body">
      <button class="ok-button" onclick="document.getElementById('erroLogin').style.display='none'; location.reload();">OK</button>
    </div>
  </div>

  <!-- Caixa de carregamento -->
  <div id="caixaCarregando" class="dialog hidden">
    <div class="dialog-header">
      <span>Autenticando...</span>
    </div>
    <div class="dialog-body">
      <p>Aguarde...</p>
    </div>
  </div>

  <script>
  const form = document.getElementById("loginForm");
  const erroBox = document.getElementById("erroLogin");
  const erroTexto = document.getElementById("erroLoginTexto");
  const carregandoBox = document.getElementById("caixaCarregando");

  form.addEventListener("submit", async function(event) {
    event.preventDefault();
    erroBox.classList.add("hidden");
    carregandoBox.classList.remove("hidden");

    const formData = new FormData(form);
    const encodedData = new URLSearchParams();
    formData.forEach((value, key) => {
      encodedData.append(key, value);
    });

    try {
      const response = await fetch("/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: encodedData
      });

      carregandoBox.classList.add("hidden");

      if (response.ok) {
        const html = await response.text();
        document.open();
        document.write(html);
        document.close();
      } else {
        if (response.status === 401) {
  const errorText = await response.text();
  if (errorText.includes("email")) {
    erroTexto.textContent = "E-mail n√£o cadastrado.";
  } else if (errorText.includes("senha")) {
    erroTexto.textContent = "Senha incorreta.";
  } else {
    erroTexto.textContent = "Credenciais inv√°lidas.";
  }
} else if (response.status === 403) {
          erroTexto.textContent = "Aguardando aprova√ß√£o do administrador.";
        } else {
          erroTexto.textContent = "Erro inesperado. C√≥digo: " + response.status;
        }
        erroBox.classList.remove("hidden");
      }
    } catch (error) {
      carregandoBox.classList.add("hidden");
      erroTexto.textContent = "Erro de conex√£o com o servidor.";
      erroBox.classList.remove("hidden");
    }
  });
</script>
</body>
</html>  



<script>function toggleSenha() { const senhaInput = document.getElementById("senhaInput"); senhaInput.type = senhaInput.type === "password" ? "text" : "password"; }</script>


